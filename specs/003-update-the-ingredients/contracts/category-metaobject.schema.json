{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mm-stationery.com/schemas/ingredient-category-metaobject.json",
  "title": "Ingredient Category Metaobject",
  "description": "Schema for ingredient category metaobject stored in Shopify",
  "type": "object",
  "required": [
    "type",
    "fields"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "ingredient_category",
      "description": "Metaobject type identifier"
    },
    "handle": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "maxLength": 100,
      "description": "URL-safe handle for the category"
    },
    "fields": {
      "type": "object",
      "required": [
        "name",
        "is_active"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Category display name"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Category description"
        },
        "display_order": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Sort order for UI display"
        },
        "is_active": {
          "type": "boolean",
          "default": true,
          "description": "Soft delete flag - false if category is deleted"
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp (managed by Shopify)"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp (managed by Shopify)"
    }
  },
  "examples": [
    {
      "type": "ingredient_category",
      "handle": "grains-flour",
      "fields": {
        "name": "Grains & Flour",
        "description": "Flour, grains, and grain-based products",
        "display_order": 10,
        "is_active": true
      },
      "createdAt": "2025-09-30T10:00:00Z",
      "updatedAt": "2025-09-30T10:00:00Z"
    },
    {
      "type": "ingredient_category",
      "handle": "dairy-products",
      "fields": {
        "name": "Dairy Products",
        "description": "Milk, butter, cheese, and other dairy items",
        "display_order": 20,
        "is_active": true
      },
      "createdAt": "2025-09-30T10:00:00Z",
      "updatedAt": "2025-09-30T10:00:00Z"
    }
  ]
}