{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mm-stationery.com/schemas/ingredient-unit-type-metaobject.json",
  "title": "Ingredient Unit Type Metaobject",
  "description": "Schema for ingredient unit type metaobject stored in Shopify",
  "type": "object",
  "required": [
    "type",
    "fields"
  ],
  "properties": {
    "type": {
      "type": "string",
      "const": "ingredient_unit_type",
      "description": "Metaobject type identifier"
    },
    "handle": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "maxLength": 50,
      "description": "URL-safe handle for the unit type"
    },
    "fields": {
      "type": "object",
      "required": [
        "name",
        "type_category",
        "is_active"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50,
          "description": "Unit type display name (e.g., 'grams', 'liters')"
        },
        "abbreviation": {
          "type": "string",
          "maxLength": 10,
          "description": "Short form abbreviation (e.g., 'g', 'L')"
        },
        "type_category": {
          "type": "string",
          "enum": ["weight", "volume", "each"],
          "description": "Unit classification: weight (mass), volume, or each (count)"
        },
        "is_active": {
          "type": "boolean",
          "default": true,
          "description": "Soft delete flag - false if unit type is deleted"
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp (managed by Shopify)"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp (managed by Shopify)"
    }
  },
  "examples": [
    {
      "type": "ingredient_unit_type",
      "handle": "grams",
      "fields": {
        "name": "grams",
        "abbreviation": "g",
        "type_category": "weight",
        "is_active": true
      },
      "createdAt": "2025-09-30T10:00:00Z",
      "updatedAt": "2025-09-30T10:00:00Z"
    },
    {
      "type": "ingredient_unit_type",
      "handle": "milliliters",
      "fields": {
        "name": "milliliters",
        "abbreviation": "mL",
        "type_category": "volume",
        "is_active": true
      },
      "createdAt": "2025-09-30T10:00:00Z",
      "updatedAt": "2025-09-30T10:00:00Z"
    },
    {
      "type": "ingredient_unit_type",
      "handle": "pieces",
      "fields": {
        "name": "pieces",
        "abbreviation": "pcs",
        "type_category": "each",
        "is_active": true
      },
      "createdAt": "2025-09-30T10:00:00Z",
      "updatedAt": "2025-09-30T10:00:00Z"
    }
  ]
}