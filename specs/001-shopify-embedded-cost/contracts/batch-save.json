{
  "endpoint": "POST /api/ingredients/batch-save",
  "description": "Batch save ingredients with optimistic concurrency checking",
  "request": {
    "type": "object",
    "properties": {
      "ingredients": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "description": "metaobject id, null for new" },
            "name": { "type": "string", "maxLength": 80 },
            "unit": { "type": "string", "enum": ["g", "kg"] },
            "currentPrice": { "type": "number", "minimum": 0 },
            "previousPrice": { "type": "number", "minimum": 0, "nullable": true },
            "complimentaryFlag": { "type": "boolean" },
            "activeFlag": { "type": "boolean", "default": true },
            "versionToken": { "type": "string", "description": "client-known version for concurrency" }
          },
          "required": ["name", "unit", "currentPrice", "complimentaryFlag"]
        }
      },
      "recipes": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "productId": { "type": "string" },
            "version": { "type": "number" },
            "lines": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "ingredientId": { "type": "string" },
                  "quantityGrams": { "type": "number", "minimum": 0.001, "maximum": 10000000 }
                },
                "required": ["id", "ingredientId", "quantityGrams"]
              }
            },
            "versionToken": { "type": "number" }
          },
          "required": ["productId", "version", "lines"]
        }
      }
    },
    "required": ["ingredients"]
  },
  "responses": {
    "200": {
      "description": "Success - All saves completed",
      "type": "object",
      "properties": {
        "savedIngredients": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "versionToken": { "type": "string" }
            }
          }
        },
        "savedRecipes": {
          "type": "array", 
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "version": { "type": "number" }
            }
          }
        }
      }
    },
    "409": {
      "description": "Conflict - Stale version tokens detected",
      "type": "object",
      "properties": {
        "error": { "type": "string", "const": "STALE_VERSION" },
        "conflicts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["ingredient", "recipe"] },
              "id": { "type": "string" },
              "clientVersion": { "type": "string" },
              "currentVersion": { "type": "string" },
              "name": { "type": "string", "description": "human readable identifier" }
            }
          }
        }
      }
    },
    "422": {
      "description": "Validation Error",
      "type": "object",
      "properties": {
        "error": { "type": "string", "const": "VALIDATION_ERROR" },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "field": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    }
  }
}