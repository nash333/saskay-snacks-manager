{
  "endpoint": "POST /api/packaging/save",
  "description": "Save packaging configuration with reuse across products (FR-009, FR-030)",
  "request": {
    "type": "object",
    "properties": {
      "id": { "type": "string", "description": "omit for new packaging" },
      "name": { "type": "string", "required": true, "minLength": 1 },
      "description": { "type": "string" },
      "costPerUnit": { "type": "number", "required": true, "minimum": 0 },
      "unitType": { "enum": ["each", "weight", "volume"], "required": true },
      "dimensions": {
        "type": "object",
        "properties": {
          "length": { "type": "number", "minimum": 0 },
          "width": { "type": "number", "minimum": 0 },
          "height": { "type": "number", "minimum": 0 },
          "unit": { "enum": ["inches", "cm"], "default": "inches" }
        }
      },
      "weight": {
        "type": "object",
        "properties": {
          "value": { "type": "number", "minimum": 0 },
          "unit": { "enum": ["grams", "ounces"], "default": "grams" }
        }
      },
      "capacity": {
        "type": "object",
        "properties": {
          "value": { "type": "number", "minimum": 0 },
          "unit": { "enum": ["ml", "oz", "cups"], "default": "ml" }
        }
      },
      "supplierInfo": {
        "type": "object",
        "properties": {
          "supplierName": { "type": "string" },
          "sku": { "type": "string" },
          "orderingUrl": { "type": "string", "format": "uri" },
          "minimumOrderQuantity": { "type": "number", "minimum": 1 }
        }
      },
      "isActive": { "type": "boolean", "default": true },
      "tags": { "type": "array", "items": { "type": "string" } }
    }
  },
  "responses": {
    "200": {
      "description": "Packaging saved successfully",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "costPerUnit": { "type": "number" },
        "unitType": { "type": "string" },
        "dimensions": { "type": "object" },
        "weight": { "type": "object" },
        "capacity": { "type": "object" },
        "supplierInfo": { "type": "object" },
        "isActive": { "type": "boolean" },
        "tags": { "type": "array" },
        "usedByProducts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "productName": { "type": "string" },
              "lastUsed": { "type": "string", "format": "date-time" }
            }
          },
          "description": "products currently using this packaging"
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "400": {
      "description": "Invalid packaging data",
      "type": "object",
      "properties": {
        "error": { 
          "enum": ["INVALID_NAME", "INVALID_COST", "INVALID_DIMENSIONS", "VALIDATION_FAILED"]
        },
        "details": {
          "type": "object",
          "properties": {
            "validationErrors": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "409": {
      "description": "Packaging name already exists",
      "type": "object",
      "properties": {
        "error": { "const": "DUPLICATE_PACKAGING_NAME" },
        "existingId": { "type": "string" },
        "suggestion": { "type": "string" }
      }
    }
  }
}