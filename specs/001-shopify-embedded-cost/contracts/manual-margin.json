{
  "endpoint": "POST /api/pricing/manual-margin",
  "description": "Calculate margin from manual selling price (ephemeral, FR-013)",
  "request": {
    "type": "object",
    "properties": {
      "productId": { "type": "string", "required": true },
      "packagingOptionId": { "type": "string", "required": true },
      "manualPrice": { "type": "number", "minimum": 0, "required": true }
    }
  },
  "responses": {
    "200": {
      "description": "Calculated margin from manual price",
      "type": "object",
      "properties": {
        "manualPrice": { "type": "number" },
        "unitCost": { "type": "number" },
        "calculatedMargin": { "type": "number", "description": "achieved margin percentage" },
        "profitAmount": { "type": "number" },
        "ephemeral": { "type": "boolean", "const": true, "description": "not persisted in v1" }
      }
    }
  }
}