{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/app/$1"
  },
  "setupFilesAfterEnv": [],
  "collectCoverageFrom": [
    "app/**/*.{ts,tsx}",
    "!app/**/*.d.ts"
  ]
}